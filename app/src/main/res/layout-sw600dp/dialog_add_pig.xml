<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_content"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white" android:fitsSystemWindows="true"
    android:orientation="vertical" android:padding="10dp" tools:context=".AddThePig">

    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight=".5"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/db_btn_addAnother"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight=".5"
            android:background="@drawable/btn_gradient"
            android:tag="add_another"
            android:text="Add Another"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/tv_subs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:visibility="gone" />

        <Button
            android:id="@+id/db_btn_finishAdd"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_weight=".5"
            android:background="@drawable/btn_gradient"
            android:tag="finish"
            android:text="Finish"
            android:textSize="38sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:layout_weight=".5"
        android:background="@drawable/layout_gradient"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_dragHere"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Drop your choice here"
            android:textSize="36sp"
            android:textStyle="bold|italic"/>

    </LinearLayout>

</LinearLayout>