                android:tag="Week 1 Nov 2015" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/iv_wf3"
                android:src="@drawable/ic_wf3"
                android:scaleType="fitCenter"
                android:layout_gravity="top"
                android:layout_margin="5dp"
                android:layout_weight=".5"
                android:tag="Week 2 Nov 2015" />
                
                -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:layout_weight=".20"
            android:background="@drawable/layout_gradient"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_dragHere"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Drop your choice here"
                android:textSize="36sp"
                android:textStyle="bold|italic"/>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
